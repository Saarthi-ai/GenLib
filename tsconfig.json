{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext", // Use ESNext for modern module support
    "jsx": "react-jsx", // Ensure this is set to react-jsx
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node", // Use node for module resolution
    "types": ["react", "jest"]
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
