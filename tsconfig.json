{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "types": ["react", "jest"]
  },
  "include": ["components/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
